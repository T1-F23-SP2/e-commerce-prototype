<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>


<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<VBox minHeight="200" maxHeight="200" spacing="5" maxWidth="800" minWidth="800" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
  <Line endX="800"/>
  <HBox spacing="15">
      <ImageView fx:id="productImage_ImageView" fitHeight="200" fitWidth="300"/>
      <VBox minWidth="300" maxWidth="300">
          <Label fx:id="productName_Label" text="Product Name">
              <font>
                  <Font size="22" />
              </font>
          </Label>
          <Label fx:id="warehouseStatus_Label" text="Status">
              <font>
                  <Font size="16" />
              </font>
          </Label>
          <TextArea fx:id="productDescription_TextArea" editable="false" minHeight="140" maxHeight="140" style="-fx-background-color: transparent"/>
      </VBox>
      <VBox minHeight="200" maxHeight="200" minWidth="170" maxWidth="170" alignment="BOTTOM_RIGHT" spacing="10">
          <VBox alignment="TOP_RIGHT" prefHeight="200">
              <Button fx:id="remove_Button" minHeight="35" maxHeight="35" maxWidth="35" minWidth="35" text="X" style="-fx-background-color: #d78c7d;">
                  <font>
                      <Font size="18"/>
                  </font>
              </Button>
          </VBox>
          <Label fx:id="price_Label" text="999.99 DKK">
              <font>
                  <Font size="18.0" />
              </font>
          </Label>
          <Spinner fx:id="amount_Spinner" editable="true" style="-fx-background-color: transparent" maxWidth="100"/>
          <VBox minHeight="0" maxHeight="0"/>
      </VBox>
  </HBox>
</VBox>
