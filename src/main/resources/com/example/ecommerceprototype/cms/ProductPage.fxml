<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<HBox prefHeight="1000" prefWidth="1740" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" spacing="20">
   <VBox maxWidth="900" minWidth="900" alignment="TOP_CENTER" spacing="20">
      <ImageView fx:id="primaryProductImage_ImageView" fitHeight="500.0" fitWidth="800"/>
      <ImageView fx:id="secondaryProductImage_ImageView" fitHeight="500.0" fitWidth="800"/>
   </VBox>
   <VBox maxWidth="800" minWidth="800" spacing="40" alignment="TOP_CENTER">
      <VBox spacing="10" maxWidth="700" minWidth="700">
         <Label fx:id="productName_Label" text="Product Name">
            <font>
               <Font size="36.0" />
            </font>
         </Label>
         <Label fx:id="productPrice_Label" text="Price">
            <font>
               <Font size="24.0" />
            </font>
         </Label>
         <Label fx:id="productStatus_Label" text="5 in stock">
            <font>
               <Font size="20.0" />
            </font>
         </Label>
         <Button fx:id="addToCart_Button" text="Add to cart" maxWidth="160" minWidth="160" maxHeight="45" minHeight="45">
            <font>
               <Font size="22" />
            </font>
         </Button>
      </VBox>
      <Line startX="0" endX="750" strokeWidth="3"/>
      <VBox alignment="TOP_CENTER" spacing="10">
         <Label text="Description">
            <font>
               <Font size="24.0" />
            </font>
         </Label>
         <TextArea fx:id="productDescription_TextArea" minHeight="400" maxWidth="700" minWidth="700" editable="false" style="-fx-background-color: transparent"/>
      </VBox>
      <VBox alignment="TOP_CENTER" spacing="10">
         <Label text="Specifications">
            <font>
               <Font size="24.0" />
            </font>
         </Label>
         <TextArea fx:id="productSpecification_TextArea" minHeight="400" maxWidth="700" minWidth="700" editable="false" style="-fx-background-color: transparent"/>
      </VBox>
   </VBox>
</HBox>
